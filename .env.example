# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Database Configuration
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=robot_monitor
DB_USER=robot_monitor
DB_PASSWORD=your_secure_password

# Camera Configuration (JSON string)
# CAMERA_CONFIG='[{"id":"cam-001","name":"Overhead Main","protocol":"rtsp","url":"rtsp://192.168.1.100:554/stream1","username":"admin","password":"password"}]'

# SmolVLM API Configuration
SMOLVLM_API_URL=http://localhost:8080
API_TIMEOUT=30000

# JWT Secret for Authentication
JWT_SECRET=your_very_secure_jwt_secret_key_change_this

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=robot.monitor@example.com
SMTP_PASS=your_email_password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Webhook Secret
WEBHOOK_SECRET=your_webhook_secret_key

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=*

# File Storage
SCREENSHOT_PATH=./data/screenshots
LOG_PATH=./logs

# Performance
MAX_CONCURRENT_REQUESTS=3
CACHE_TTL=5000

# Monitoring
DEFAULT_CAPTURE_INTERVAL=500
DEFAULT_FRAME_QUALITY=0.8